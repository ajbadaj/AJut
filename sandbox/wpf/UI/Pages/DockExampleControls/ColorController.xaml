<UserControl x:Class="TheAJutShowRoom.UI.Pages.DockExampleControls.ColorController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheAJutShowRoom.UI.Pages.DockExampleControls"
             xmlns:ajut="clr-namespace:AJut.UX.Controls;assembly=AJut.UX.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="Self">
    <Grid>
        <ajut:ColorEditIngressControl Width="300" Height="100"
                                      EditColor="{Binding ElementName=Self, Path=NewBkg, Mode=TwoWay}"/>
    </Grid>
</UserControl>
