            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ComboBox}">
                    <Grid>
                        <Popup x:Name="PART_Popup" IsOpen="{TemplateBinding IsDropDownOpen}" 
                               PlacementTarget="{Binding ElementName=MainButton}" Placement="Bottom" HorizontalOffset="3"
