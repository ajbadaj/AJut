<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="AJut.UX.Theming.Controls.ThemedWindowRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AJut.UX.Theming.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    UseLayoutRounding="True">

    <Grid x:Name="WindowRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- Titlebar Area -->
        <Grid x:Name="CustomTitleBarContainer" Height="40" Background="{x:Bind CurrentlySetTitlebarBackground}">
            <ContentControl Content="{x:Bind CustomTilteBar}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
            <Border x:Name="TitleBarBorder" BorderBrush="{Binding ElementName=WindowRoot, Path=Background}"/>
        </Grid>

        <!-- Client Area -->
        <ContentControl x:Name="ClientContainer" Grid.Row="1" Content="{x:Bind WindowContents}"
                        HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
        <!--<Border Grid.RowSpan="2"
                BorderBrush="{x:Bind ActiveBorderBrush}" 
                BorderThickness="{x:Bind ActiveBorderThickness}" />-->


    </Grid>
</UserControl>
